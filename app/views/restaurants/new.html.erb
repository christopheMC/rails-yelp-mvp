<div class="container">
  <div class="row">
    <div class="col-6">
      <%= simple_form_for(@restaurant) do|f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.select :category, ["chinese", "italian", "japanese", "french", "belgian"] %>
        <%= f.submit class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
