<div class="container">
  <div class="row">
    <div class="header">
      <%= link_to "back", restaurants_path %>
    </div>
    <div class="col-6">
      <h1><%= @restaurant.name %></h1>
      <p><%= @restaurant.address %></p>
      <p><%= @restaurant.phone_number %></p>
      <p><%= @restaurant.category %></p>

      <%= link_to "leave a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
      <div class="mt-5">
        <h3>List of reviews</h3>
        <ul>
          <% @restaurant.reviews.each do |review| %>
            <li><%= review.content %>
              <%= link_to "Remove",
                    review_path(review),
                    method: :delete,
                    class: "btn btn-danger",
                    data: { confirm: "Are you sure?" } %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
