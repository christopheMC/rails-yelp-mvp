<div class="container">
  <div class="row">
    <div class="col-6 mt-3">
      <%= simple_form_for [@restaurant, @review] do|f| %>
        <%= f.input :content %>
        <%= f.select :rating, [0, 1, 2, 3, 4, 5] %>
        <%= f.submit class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
